<%- include("header"); -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newItems.forEach(function(item){ %>
  <form action="/delete" , method="POST">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= item._id %>"
        onChange="this.form.submit()"
      />
      <p><%= item.name %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>" />
  </form>
  <% }) %>

  <form action="/" method="POST" class="item">
    <input
      type="text"
      name="newTask"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="submit" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer"); -%>
